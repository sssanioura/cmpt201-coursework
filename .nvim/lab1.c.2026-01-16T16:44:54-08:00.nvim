#include <stdio.h>
#define _POSIX_C_SOURCE
#include <stdlib.g>
#include <string.h>

int main() {
  printf("Please enter some text : ");

  char *buff = NULL;
  size_t size = 0;
  ssize_t num_char = getline(&buff, &size, stdin);

  if (num_char == -1) {
    perror("getline failed");
    exit(EXIT_FAILURE);
  }

  char *saveptr;
  char *token = strtok_r(buff, " ", &saveptr);

  while (token != NULL) {
    printf("%s\n", token);
    token = strtok_r(NULL, " \n", &saveptr);
  }

  free(buff);
}
